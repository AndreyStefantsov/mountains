mixin icon(name, className)
  - var icon = require(`images/icons/${name}.svg`);
  svg(class=className viewBox=icon.viewBox preserveAspectRatio="")
    use(xlink:href=icon.url)

mixin image(path, className)
  img(src=require(`images/${path}`) class=className)

mixin nav(className, items, linkMod)
  nav(class=`${className} ` + (linkMod ? `${className}_${linkMod}` : ''))
    ul(class=`${className}__list`)
      each item in items
        li(class=`${className}__item`)
          a(class=`${className}__link ` + (linkMod ? `${className}__link_${linkMod}` : '') href="#")=item


mixin socials(className, items, iconClassName, iconNames, linkMod)
  ul(class=`${className}`)
    - for (var i=0; i<items.length; i++) 
      li(class=`${className}__item ` + (linkMod ? `${className}__item_${linkMod}` : ''))
        a(class=`${className}__link ` + (linkMod ? `${className}__link_${linkMod}` : '') title=items[i]  href='#')
          +icon(iconNames[i], (`${iconClassName} `+ (linkMod ? `${iconClassName}_${linkMod}` : '')))

