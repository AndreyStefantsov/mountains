mixin skillwheel(className, title, items)
  div(class=`${className}`)
    span(class=`${className}__title`)=title
    ul(class=`${className}__list`)
      each item in items
        li(class=`${className}__item`)
          svg.circle(viewBox='0 0 150 150' preserveAspectRatio="none")
            circle.circle__bg(cx='75' cy='75' r='65')
              - 
                const dashoffset = -410;
                var percent=(dashoffset*(100-item.percent))/100
            circle.circle__progress(cx='75' cy='75' r='65' stroke-dashoffset=percent)
            linearGradient(id="grad")
              stop(offset="0%" stop-color="#4a00ed")
              stop(offset="50%" stop-color="#5400ec")
              stop(offset="100%" stop-color="#9e00ff")
          div(class=`${className}__subtitle`)=item.text

mixin projects(className, names, activeItem)
  div(class=`${className}__wrap`)
    ul(class=`${className}__list`)
      each name, index in names
        li(class=`${className}__item ` + ((activeItem === index) ? `is-active` : ''))
          - var img = require(`images/content/${name}.jpg`);
          a(class=`${className}__link` href='#' style=`background: url(${img}); background-size: cover`)

mixin tags(className, items)
  div(class=`${className}`)
      ul(class=`${className}__list`)
        each item in items
          li(class=`${className}__item`)
            span(class=`${className}__title`)=item

