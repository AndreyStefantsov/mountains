.container-skills {
    align-items: center;
    justify-content: center;
    flex-direction: column;
    height: initial;
    margin-bottom: 150px;
    position: relative;

    @include desktop {
        margin-left: 0px;
    }

    @include desktopLow {
        flex-direction: column;
        margin: 0 auto;
    }

    @include monitor {
        flex-direction: column;
        //margin-left: 60px;
    }

    @include tablets {
        //margin-left: 40px;
    }
    

}


