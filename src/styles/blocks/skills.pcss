.bg-image__pic {
    max-width: 100%;
}

.skills {
    display: flex;
    flex-direction: row;
    //max-width: 770px;
    //align-self: flex-end;
    //margin-right: 100px;
    width: 100%;
    justify-content: space-around;
    align-items: center;

    @include desktop {
        justify-content: flex-end;
        //margin-left: 60px;
        margin-right: 0;
    }

    @include desktopLow {
        flex-direction: column;
        margin-left: 0;
        justify-content: center;
        align-self: center;
    }

    @include monitor {
        flex-direction: column;
        margin-left: 0;
        justify-content: center;
        align-self: center;
    }


    @include tablets {
        flex-direction: column;
        margin-left: 0;
        width: 100%;
        align-items: center;
    }

    @include widePhones {
        margin-left: 30px;
        flex-direction: column;
        //max-width: 260px;
    }
    
}

.skills-description {
    display: flex;
    align-items: flex-start;
    flex-direction: column;
    margin-bottom: 95px;

    @include desktop {
        margin-left: 60px;
    }

    @include tablets {
        margin-bottom: 95px;
        margin-left: 0;
        align-items: center;
        max-width: 450px;
    }

    @include widePhones {
        margin-bottom: 60px;
    }

}

.main-title_skills {
    font-size: 36px;
    margin-bottom: 55px;

    @include tablets {
        margin-bottom: 30px;
        max-width: 280px;
        font-size: 30px;
        text-align: center;
    }

    @include widePhones {
        width: 100%;
        max-width: 260px;
        text-align: left;
        font-size: 24px;
    }
}

.main-subtitle_skills {
    max-width: 600px;
    color: rgba($text-color, .5);
    
    @include tablets {
        text-align: center;
        font-size: 14px;
    }

    @include widePhones {
        max-width: 260px;
        width: 100%;
        text-align: left;
    }
}

