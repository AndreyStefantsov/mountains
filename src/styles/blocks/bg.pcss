.bg-top {
    background: url(../images/content/mountain_baloon.jpg) no-repeat center;
    clip-path: polygon(0% 0% , 100% 0%, 100% 94%, 50% 100%, 0% 94%);
    margin-bottom: 150px;
    background-size: cover;
}

.bg-down {
    background: url(../images/content/budda.jpg) no-repeat center;
    clip-path: polygon(0% 0%, 50% 6%, 100% 0%, 100% 100%, 0% 100% );
    background-size: cover;
}
